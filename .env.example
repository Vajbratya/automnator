# Recommended in production. In dev, the app falls back to an insecure default.
# Use a long random value (32+ chars).
APP_SESSION_SECRET="replace-with-a-long-random-secret"

# Optional: where the local JSON database lives
# Default (local): .data/automnator.db.json
# Default (Vercel): /tmp/automnator.db.json (ephemeral)
# AUTOMNATOR_DB_PATH="/absolute/path/to/automnator.db.json"

# Defaults are true (mock mode).
MOCK_LINKEDIN=true
MOCK_AI=true

# Optional Supabase (not required for local file-backed mode)
# NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROJECT.supabase.co"
# NEXT_PUBLIC_SUPABASE_ANON_KEY="YOUR_ANON_KEY"
# SUPABASE_SERVICE_ROLE_KEY="YOUR_SERVICE_ROLE_KEY"

# Optional (future)
# OPENAI_API_KEY="YOUR_OPENAI_KEY"
# LI_SESSION_ENCRYPTION_KEY="YOUR_32_BYTE_KEY"

# Optional OpenRouter (set MOCK_AI=false)
# OPENROUTER_API_KEY="YOUR_OPENROUTER_KEY"
# OPENROUTER_API_KEYH="YOUR_OPENROUTER_KEY" # alias supported
# OPENROUTER_MODEL="openai/gpt-4o-mini"
# OPENROUTER_BASE_URL="https://openrouter.ai/api/v1"

# Optional publisher webhook (set MOCK_LINKEDIN=false)
# Your webhook should POST to LinkedIn (via your own infra / Buffer / Zapier / Make).
# It must return JSON: { "postId": "...", "url": "https://..." }
# PUBLISH_WEBHOOK_URL="https://your-webhook.example.com/publish"
# PUBLISH_WEBHOOK_SECRET="optional-hmac-secret"

# Optional: protect on-demand worker run endpoint
# /api/worker/run requires this in production. Can be passed as header `x-worker-secret`
# or query param `?secret=...`.
# WORKER_CRON_SECRET="replace-with-a-long-random-secret"

# Optional: auto-run planner + scheduling
# POST /api/auto/run?secret=WORKER_CRON_SECRET
